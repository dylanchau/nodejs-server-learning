{
    "env": {
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "plugins": [
        "prettier",
        "sort-requires"
    ],
    "extends": [
        "eslint:recommended",
        // "node",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer":"readonly",
        "__DEBUG__": true,
        "__DEV__": true,
        "__VERSION__": true,
        "__BUILD_TIME__": true
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        // "quotes": ["error", "single"],
        "quotes":["error", "single", {"avoidEscape": true}],
        "semi": ["error", "always"],
        "semi-spacing": ["error", {"before": false, "after": true}],
        "semi-style": ["error", "last"],
        "no-extra-semi": "error",
        "no-empty-function": "warn",
        "prettier/prettier": ["error", {"singleQuote": true }],
        "no-unused-vars": "off",
        "sort-requires/sort-requires": 2
    }
}
